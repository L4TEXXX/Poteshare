<div class="reservation-index">
    <h4>予約済みルーム一覧</h4>
    <table>
        <thead>
            <tr align="center">
                <th>ルーム画像</th>
                <th>ルーム名</th>
                <th>ルーム紹介</th>
                <th>合計料金</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>予約確定日時</th>
            </tr>
        </thead>
        <tbody>
            <% @reservation. each do |r| %>
                <tr>
                    <th><%= image_tag "/room_image/#{r.room.images}"  %></th>
                    <th><%= link_to r.room.room_name,reservation_path(r) %></th>
                    <th><%= r.room.room_PR %></th>
                    <th><%= r.room.room_price * ((r.end_date.to_date - r.start_date.to_date).to_i) %></th>
                    <th><%= r.start_date %></th>
                    <th><%= r.end_date %></th>
                    <th><%= r.created_at %></th>
                </tr>
            <%end%>    
        </tbody>
    </table>
</div>