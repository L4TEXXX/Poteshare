
<div class = "new container">
  <%= form_with model: @user , local: true do |f| %>
  <table class="form-table">
    <tr>
        <th><%= f.label :name ,"名前" %></th>
        <td><%= f.text_field :name %></td>
    </tr>
    <tr>
        <th><%= f.label :image ,"プロフィール画像" %></th>
        <td><%= f.file_field :image %></td>
    </tr>
    <tr>
        <th><%= f.label :email ,"メールアドレス" %></th>
        <td><%= f.text_field :email %></td>
    </tr>
    <tr>
        <th><%= f.label :intro ,"自己紹介" %></th>
        <td><%= f.text_area :intro %></td>
    </tr>
  </table>
  <div class="new-form">
      <p><%= f.submit "編集する" , class: "create-btn" %></p>
      <p><%= link_to "宿泊先一覧に戻る", "#" %></p>
  </div>
  <% end %>
</div>