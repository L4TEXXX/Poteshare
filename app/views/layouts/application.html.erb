<!DOCTYPE html>
<html>
  <head>
    <title>PoteShare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="left-nav">
        <%= link_to image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png",class:"left-nav-image"), root_path%>
      </div>
      <div class="left-nav">
      <!-- url未入力 -->
        <%= form_with(class: 'search_form_topleft', method: :get, local:true) do |f| %>
            <%= f.text_field :search_area, class: 'field',value: params[:search], placeholder: "エリア", class: "topleft-input"%>
            <%= f.submit '探す'%>
          <% end %>
      </div>
      <div class="left-nav">
        <%= form_with(class: 'search_form_topleft', method: :get, local:true) do |f| %>
            <%= f.text_field :search_keyword, class: 'field',value: params[:search], placeholder: "キーワード", class: "topleft-input"%>
            <%= f.submit '検索'%>
          <% end %>
      </div>
      <div class="header-right">
        <% if @current_user %>
          <%= link_to @current_user.name, user_path(@current_user) %>
          <%= link_to "ログアウト", logout_path, method: :post %>
        <% else %>
          <%= link_to "ログイン" ,login_path %>
          <%= link_to "登録する" , new_user_path %>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
